<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Shoottoo</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon" />
    <!-- Google Web Fonts -->
    <!-- Customized Bootstrap Stylesheet -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Template Stylesheet -->
    <link href="/css/publicStyles.css" rel="stylesheet" />
    <link href="/css/game.css" rel="stylesheet" />
    <link href="/css/<%-style%>.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Agbalumo&family=Barlow:wght@500&display=swap" rel="stylesheet">
</head>

  <body >
    <nav class="w-100 center">
        <div class="userIcon modalButton center" id="updateProfile">
          <img src="<%=user.imageUrl%>" alt="" srcset="" />
        </div>
        <div class="userInfo center">
          <span id="nameContainer"><%=user.userName%></span>
          <span id="cashContainer">Cash ~<%=user.accountBalance%></span>
          <span class="center">
            <a class="" href="/">home</a>
      
            <div id="hideInfo">hide</div>
          </span>
        </div>
      </nav>

      
     <div class="gameDetails">
      <h3><%=game.gameType%></h3>
      <p>Stake per Game: <span>K<%= game.stakePerGame %></span></p>
      <!-- Players section -->
      <div class="players-section">
        <p>Vs</p>
        <div class="player-images">
          <% game.players.forEach(player => { %>
            <div><%= player %></div>
            <% }); %>
          </div>
        </div>
      </div>
      
  <div class="sendSection">
    <input id="messageInput" type="text" />
    <button id="sendMessage" onclick="sendMessage()">Send</button>
  </div>
    <%-  body%>

    <div class="modal" id="notificationModal">
      <div class="header">
        <span>Notification</span>
        <span class="closeModal" id="notificationModal">&times;</span>
      </div>
      <div class="body center notificationModal">
       
      </div>
      <br />
      <br />
      <div class="footer"></div>
    </div>
    
    <script defer src="/js/socketio.js"></script>
    
<script defer src="/js/<%=script%>.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
 
       <script defer src="/js/main.js"></script>
  </body>
</html>
